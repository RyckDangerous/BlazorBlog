@page "/"
@layout HomeLayout
@using BlazorBlog.Features.Home.Services
@using BlazorBlog.Core.Models.ViewModels
@using BlazorBlog.Features.Layout
@inject IHomePageViewService ViewService

<PageTitle>Accueil</PageTitle>

<div class="home-container">
    <header class="home-header">
        <div class="header-content">
            <div class="logo-section">
                <div class="logo-icon">⌨️</div>
                <h1 class="logo-text">CTRL ALT SUPPR</h1>
            </div>
            <p class="header-subtitle">Partager du code</p>
            <a href="https://github.com" target="_blank" class="github-link" aria-label="GitHub">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
            </a>
        </div>
    </header>

    <main class="home-main">
        @if (ViewService.IsLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p>Chargement des articles...</p>
            </div>
        }
        else if (ViewService.ErrorMessage is not null)
        {
            <div class="error-container">
                <div class="alert alert-error">
                    <span class="alert-icon">⚠️</span>
                    <span>@ViewService.ErrorMessage</span>
                </div>
            </div>
        }
        else if (ViewService.Articles.Count == 0)
        {
            <div class="empty-container">
                <p class="empty-message">Aucun article pour le moment.</p>
            </div>
        }
        else
        {
            <div class="articles-grid">
                @foreach (var article in ViewService.Articles)
                {
                    <article class="article-card" @onclick="@(() => NavigateToArticle(article.Id))">
                        <div class="card-content">
                            <h2 class="card-title">@article.Title</h2>
                            <div class="card-meta">
                                <span class="card-author">par @article.Author</span>
                                <span class="card-separator">-</span>
                                <span class="card-date">@article.CreatedAt.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </article>
                }
            </div>
        }
    </main>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await ViewService.LoadArticlesAsync();
        StateHasChanged();
    }

    private void NavigateToArticle(string articleId)
    {
        Navigation.NavigateTo($"/articles/{articleId}");
    }
}

